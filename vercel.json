{
  "version": 2,
  "builds": [{
      "src": "api/routes/**/*.js",
      "use": "@now/node"
    },
    {
      "src": "package.json",
      "use": "@now/static-build"
    }
  ],
  "build": {
    "env": {
      "API_URL": "https://mazhin.vercel.app"
    }
  },
  "routes": [{
      "src": "/api/.*",
      "headers": {
        "access-control-allow-origin": "*"
      },
      "continue": true
    },
    {
      "src": "/api/(.+?)(/|$).*",
      "dest": "api/routes/$1"
    },
    {
      "src": "/api",
      "dest": "api/routes"
    },
    {
      "src": "/_nuxt/.+",
      "headers": {
        "cache-control": "s-maxage=31536000"
      }
    },
    {
      "src": "/(.*)",
      "dest": "$1"
    }
  ]
}
